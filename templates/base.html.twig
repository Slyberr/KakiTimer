<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}KakiTimer{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/kakitimer-alpha-no-title.png') }}">   
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        {% block body %}
        <div data-controller="application">
        <header>
            <a href="/" class="box-logo-kaki-timer" >
                <img src="{{ asset('img/kakitimer-alpha-no-title.png') }}">
            </a>
            <a class="icon-night-mode" >
                <img is-bright-mode="false" data-application-target="brightmode" src="{{ asset('img/svg/moon.svg') }}">
            </a>
        </header>
        </div>
        {% endblock %}
    </body>
</html>

